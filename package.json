{
  "name": "nephix",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@9.15.4",
  "scripts": {
    "dev": "set -a; [ -f ./.env ] && . ./.env; set +a; pnpm --filter @nephix/web dev",
    "build": "set -a; [ -f ./.env ] && . ./.env; set +a; pnpm --filter @nephix/web build",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "test": "pnpm -r test && pnpm test:unit",
    "test:unit": "vitest run",
    "test:e2e": "playwright test",
    "db:generate": "pnpm --filter @nephix/db db:generate",
    "db:migrate": "pnpm --filter @nephix/db db:migrate",
    "db:seed": "pnpm --filter @nephix/db db:seed"
  },
  "devDependencies": {
    "@playwright/test": "1.49.1",
    "@types/node": "22.12.0",
    "@typescript-eslint/eslint-plugin": "8.18.1",
    "@typescript-eslint/parser": "8.18.1",
    "eslint": "9.17.0",
    "eslint-config-next": "15.1.9",
    "eslint-config-prettier": "9.1.0",
    "prettier": "3.4.2",
    "typescript": "5.7.2",
    "vitest": "2.1.8"
  }
}
